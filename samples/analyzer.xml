<?xml version="1.0" encoding="UTF-8"?>
<analysis>
    <!-- char filter declarations -->
    <character_filter>
        <strip_all_html_tags type="html_strip">
            <!-- sample for escaping tags -->
            <!--
            <escaped_tags>
                <b><![CDATA[b]]></b>
            </escaped_tags>
            -->
        </strip_all_html_tags>
    </character_filter>
    <!-- tokenizer declarations -->
    <tokenizer></tokenizer>
    <!-- token filter declarations -->
    <token_filter>
        <completion_stop type="stop">
            <stopwords>_english_</stopwords>
        </completion_stop>
        <completion_snowball type="snowball">
            <language>English</language>
        </completion_snowball>
        <completion_edge type="edge_ngram">
            <min_gram>2</min_gram>
            <max_gram>8</max_gram>
        </completion_edge>
        <decompound type="decompound">
            <subwords_only>true</subwords_only>
        </decompound>
    </token_filter>
    <!-- analyzer declarations -->
    <analyzer>
        <!-- analyzer for auto competition -->
        <completion_analyzer type="custom">
            <tokenizer>keyword</tokenizer>
            <filter>
                <completion_stop/>
                <completion_snowball/>
                <completion_edge/>
            </filter>
        </completion_analyzer>
        <!-- analyzer for regular fulltext search -->
        <full_text_search type="custom">
            <tokenizer>whitespace</tokenizer>
            <filter>
                <decompound/>
                <lowercase/>
                <word_delimiter/>
                <unique/>
            </filter>
            <tokenizer>standard</tokenizer>
        </full_text_search>
        <full_text_search_boosted type="custom">
            <tokenizer>whitespace</tokenizer>
            <filter>
                <lowercase/>
                <word_delimiter/>
                <unique/>
            </filter>
            <tokenizer>standard</tokenizer>
        </full_text_search_boosted>
    </analyzer>
</analysis>